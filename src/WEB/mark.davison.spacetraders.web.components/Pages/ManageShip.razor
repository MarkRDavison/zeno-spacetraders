@attribute [Route(Routes.Ship)]
@inherits FluxorComponent

<MudStack Class="pa-4">
    <MudStack Row AlignItems="AlignItems.End">
        <MudText Typo="Typo.h3">@ShipSymbol</MudText>
        <MudSpacer />
    </MudStack>

    @if (ShipState.Value.IsLoading)
    {
        <MudProgressCircular Indeterminate
                             Class="ma-auto"
                             Size="Size.Large" />
    }
    else if (ShipDto != null)
    {
        <MudText Typo="Typo.h6">@($"Role: {ShipDto.Role}")</MudText>
        <MudText Typo="Typo.h6">@($"System: {ShipDto.SystemSymbol}")</MudText>
        <MudText Typo="Typo.h6">@($"Waypoint: {ShipDto.WaypointSymbol}")</MudText>
        <MudText Typo="Typo.h6">@($"Status: {ShipDto.ShipNavStatus}")</MudText>
        <MudText Typo="Typo.h6">@($"Flight: {ShipDto.ShipNavFlightMode}")</MudText>
    }
</MudStack>