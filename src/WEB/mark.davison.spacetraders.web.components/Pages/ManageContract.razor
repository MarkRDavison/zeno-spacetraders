@attribute [Route(Routes.Contract)]
@inherits FluxorComponent

<MudStack Class="pa-4">
    <MudStack Row AlignItems="AlignItems.End">
        <MudText Typo="Typo.h3">@($"{ActiveContract?.Type ?? "Unknown"} contract")</MudText>
        <MudSpacer />
        @if (ActiveContract is not null)
        {
            <CommandMenu OnCommandMenuItemSelected="@CommandMenuItemSelected"
                         Items="@_commandMenuItems" />
        }
    </MudStack>
    @if (ActiveContract is not null)
    {

        <MudText Typo="Typo.h6">@(ActiveContract.Accepted ? "Accepted" : "Not acccepted")</MudText>

        @if (!ActiveContract.Accepted)
        {
            <MudText Typo="Typo.h6">@($"On accepted: ₡{ActiveContract.Terms.Payment.AcceptedCredits}")</MudText>
        }
        <MudText Typo="Typo.h6">@($"On fulfilled: ₡{ActiveContract.Terms.Payment.FulfilledCredits}")</MudText>

        <MudText Typo="Typo.subtitle2">Goods to deliver</MudText>
        <MudTable Items="@ActiveContract.Terms.ContractDeliverGoods">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Destination</MudTh>
                <MudTh>Progress</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">
                    <MudText Typo="Typo.body2">@context.TradeSymbol</MudText>
                </MudTd>
                <MudTd DataLabel="Destination">
                    <MudText Typo="Typo.body2">@context.DestinationSymbol</MudText>
                </MudTd>
                <MudTd DataLabel="Progress">
                    <MudText Typo="Typo.body2">@($"{context.UnitsFulfilled}/{context.UnitsRequired}")</MudText>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }
</MudStack>