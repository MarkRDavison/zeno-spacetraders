@attribute [Route(Routes.Ships)]
@inherits FluxorComponent

<MudStack Class="pa-4">
    <MudStack Row AlignItems="AlignItems.End">
        <MudText Typo="Typo.h3">Ships</MudText>
        <MudSpacer />
    </MudStack>

    @if (ShipState.Value.IsLoading)
    {
        <MudProgressCircular Indeterminate
                             Class="ma-auto"
                             Size="Size.Large" />
    }
    else if (ShipState.Value.Ships.Any())
    {
        <MudTable Items="@ShipState.Value.Ships" Hover>
            <HeaderContent>
                <MudTh>Symbol</MudTh>
                <MudTh>Role</MudTh>
                <MudTh>System</MudTh>
                <MudTh>Waypoint</MudTh>
                <MudTh>Nav status</MudTh>
                <MudTh>Flight mode</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Symbol">
                    <MudText Typo="Typo.body1">@context.Symbol</MudText>
                </MudTd>
                <MudTd DataLabel="Role">
                    <MudText Typo="Typo.body1">@context.Role</MudText>
                </MudTd>
                <MudTd DataLabel="System">
                    <MudText Typo="Typo.body1">@context.SystemSymbol</MudText>
                </MudTd>
                <MudTd DataLabel="Waypoint">
                    <MudText Typo="Typo.body1">@context.WaypointSymbol</MudText>
                </MudTd>
                <MudTd DataLabel="Nav status">
                    <MudText Typo="Typo.body1">@context.ShipNavStatus</MudText>
                </MudTd>
                <MudTd DataLabel="Flight mode">
                    <MudText Typo="Typo.body1">@context.ShipNavFlightMode</MudText>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }
    else
    {
        <MudText Typo="Typo.body1">No ships</MudText>
    }
</MudStack>