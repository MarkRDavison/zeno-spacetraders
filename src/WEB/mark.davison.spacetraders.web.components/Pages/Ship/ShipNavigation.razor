<MudStack Row>
    @if (ShipDto.Nav.Status == "DOCKED")
    {
    <MudButton ButtonType="ButtonType.Submit"
               Color="Color.Primary"
               StartIcon="@Icons.Material.Filled.Outbound"
               Variant="Variant.Filled"
               Size="Size.Large"
               Disabled="@(ShipDto.Nav.Status == "IN_ORBIT")"
               IconSize="Size.Large"
               OnClick="@MoveShipToOrbit">Orbit</MudButton>

    }
    else 
    {
    <MudButton ButtonType="ButtonType.Submit"
               Color="Color.Primary"
               StartIcon="@Icons.Material.Filled.Outbound"
               Variant="Variant.Filled"
               Size="Size.Large"
               Disabled="@(ShipDto.Nav.Status != "IN_ORBIT")"
               IconSize="Size.Large"
               OnClick="@DockShip">Dock</MudButton>
    }
</MudStack>