@if (CargoDto is null)
{
    <MudProgressLinear Indeterminate Size="Size.Large" />
}
else
{
    <MudPaper Class="pa-4">
        <MudText>@($"Capacity: {CargoDto.Capacity}")</MudText>
        <MudText>@($"Used: {CargoDto.Units}")</MudText>

        <MudTable Items="@CargoDto.Inventory">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Amount</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">
                    <MudText Typo="Typo.body1">@context.Name</MudText>
                </MudTd>
                <MudTd DataLabel="HeaderContent">
                    <MudText Typo="Typo.body1">@context.Units</MudText>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudPaper>
}