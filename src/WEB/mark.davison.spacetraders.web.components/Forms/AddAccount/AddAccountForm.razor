@inherits Form<AddAccountFormViewModel>

<MudForm>
    <MudSwitch id="add-account-form-add-existing"
               Label=@(FormViewModel.AddExisting ? "Add existing" : "Add new") 
               T="bool"
               @bind-Value="FormViewModel.AddExisting"
               For=@(() => FormViewModel.AddExisting) />

    @if (FormViewModel.AddExisting)
    {
        <MudTextField id="add-account-form-token"
                      T="string"
                      Label="Token"
                      @bind-Text="FormViewModel.Token"
                      For=@(() => FormViewModel.Token)
                      Immediate
                      Required />
    }
    else
    {
        <MudTextField id="add-account-form-identifier"
                      T="string"
                      Label="Identifier"
                      @bind-Text="FormViewModel.Identifier"
                      For=@(() => FormViewModel.Identifier)
                      Immediate
                      Required />
        <MudTextField id="add-account-form-email"
                      T="string"
                      Label="Email"
                      @bind-Text="FormViewModel.Email"
                      For=@(() => FormViewModel.Email)
                      Immediate />
    <Dropdown Id="add-account-form-faction-symbol"
              Label="Faction symbol"
              Items="@FormViewModel.FactionSymbols"
              @bind-Value="FormViewModel.FactionSymbol"
              For=@(() => FormViewModel.FactionSymbol) />
    }
</MudForm>